<%= simple_form_for(@sample) do |f| %>
  <%= f.input :name %>
  <%= f.input :bpm %>
  <%= f.input :key, as: :radio_buttons, collection: Sample::ACCEPTED_KEYS %>
  <%= f.input :source %>
  <%= f.input :private, as: :radio_buttons, collection: [['private', true], ['public', false]] %>
  <%= f.input :audio_file, as: :file %>
  <%= f.button :submit %>
<% end %>
